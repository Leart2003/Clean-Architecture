@{
    ViewData["Title"] = "Login to your account";
}


<div class="row">
    <div class="col-md-6 offset-md-3">
        <h4 class="form-header">Login into account</h4>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form asp-controller="Authentication" asp-action="LoginSubmit">
                    <div class="form-group mb-3">
                        <label for="emailAdress">Email adress</label>
                        <input  class="email" name="emailAdress"  type="email" id="emailAdress" placeholder="Enter email" />
                        <small id="emailAdress" class="form-text text-muted" >We'll never share your email with anyone else</small>
                    </div>
                    <div class="form-group mb-3">
                        <label for="password">Password</label>
                        <input type="password" name="password" class="form-control" id="pasword" placeholder="Enter password" />
                    </div> 
                    <button type="submit" class="btn btn-outline-success mt-2 btn-login">
                        Log in
                    </button>
                </form>
            </div>
        </div>
    </div>

</div>