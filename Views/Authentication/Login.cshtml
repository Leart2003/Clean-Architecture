@model ShortUrl.Data.ViewModel.LoginVm
@{
    ViewData["Title"] = "Login to your account";
}


<div class="row">
    <div class="col-md-6 offset-md-3">
        <h4 class="form-header">Login into account</h4>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form asp-controller="Authentication" asp-action="LoginSubmit" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="EmailAddress"></label>
                        <input asp-for="EmailAddress" class="form-control" placeholder="Enter email" id="emailAddress" />
                        <small class="form-text text-muted">We'll never share your email with anyone else</small>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" type="password" id="password" placeholder="Enter password" />
                    </div>
                    <button type="submit" class="btn btn-outline-success mt-2 btn-login">
                        Log in
                    </button>
                </form>
              
            </div>
        </div>
    </div>

</div>
