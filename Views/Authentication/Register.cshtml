@{
    ViewData["Title"] = "Register to your account";
}


<div class="row">
    <div class="col-md-6 offset-md-3">
        <h4 class="form-header">Create your account</h4>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form asp-controller="Authentication" asp-action="Register">
                     <div class="form-group mb-3">
                        <label for="fullName">Full name</label>
                        <input class="email" type="text" id="fullName" placeholder="Enter full name" />
                      
                    </div>
                    <div class="form-group mb-3">
                        <label for="emailAdress">Email adress</label>
                        <input class="email" type="email" id="emailAdress" placeholder="Enter email" />
                        <small id="emailAdress" class="form-text text-muted">We'll never share your email with anyone else</small>
                    </div>
                    <div class="form-group mb-3">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="pasword" placeholder="Enter password" />
                    </div>
                    <div class="form-group mb-3">
                        <label for="confirmPassword">Confirm Password</label>
                        <input type="password" class="form-control" id="confirmPassword" placeholder="Re-Enter password" />
                    </div>
                    <button type="submit" class="btn btn-outline-success mt-2 btn-register">
                      Register
                    </button>
                </form>
            </div>
        </div>
    </div>

</div>