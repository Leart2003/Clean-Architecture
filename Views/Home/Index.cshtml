@{
    ViewData["Title"] = "Home Page";
}


<section class="landing py-5">

    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-4">
                <img src="~/Images/stick-figures-welcome-free-vector.jpg" class="img-fluid" alt="" />
            </div>
            <div class="col-lg-8">
                <h1 class="display-4">More then just a shorten link</h1>
                <p class="lead">
                    Build your brand
                </p>
            </div>
        </div>
    </div>
</section>

<section class="feature" id="feature">
    <div class="container">
        <div class="url-shorten-feature">
            <form class="url-shorten-form" id="url-shorten-form" action="/Home/ShortenAction" method="post">
                <div>
                    <input type="text" class="url-input" name="urlToShorten" placeholder="short a link here">
                    <span class="alert"></span>
                </div>
                <button type="submit" class="btn btn-lg" style="">Shorten it!</button>
            </form>
        </div>
    </div>

</section>